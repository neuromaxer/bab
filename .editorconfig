root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{cpp,h}]
indent_style = tab
indent_size = 4

[*.{sol,yul}]
indent_style = space
indent_size = 4

[*.py]
indent_style = space
indent_size = 4

[*.md]
indent_style = space
indent_size = 2

[*.{toml,ini,txt,cmake}]
indent_style = space
indent_size = 4

[*.json]
indent_size = 2

[*Makefile]
indent_style = tab
indent_size = 8

[{*.yaml,*.yml}]
indent_size = 2

[{*.bash,*.sh,*.zsh}]
indent_size = 2
tab_width = 2
